{
  "phpcs.enable": false,
  "phpcs.standard": ".vscode/.yii2cs.xml",
  "files.associations": {
    "*.module": "php",
    "*.inc": "php",
    ".php_cs": "php"
  },
  "editor.formatOnSave": false,
  "namespaceResolver.exclude": "**/node_modules/**",
  "namespaceResolver.autoSort": true,
  "namespaceResolver.leadingSeparator": true,
  "phpdoc-generator.shortType": true,
  "php-cs-fixer.executablePath": "php-cs-fixer",
  "php-cs-fixer.onsave": true,
  "php-cs-fixer.config": ".vscode/.php_cs;",
  "php-cs-fixer.pathMode": "override",
  "php-cs-fixer.exclude": [
    "vendor",
  ],
  "php-cs-fixer.formatHtml": false,
  "php-cs-fixer.documentFormattingProvider": true,
}
